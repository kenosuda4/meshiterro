<div class="content-index">

  <!-- メッセージの表示 -->
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <h1>Books</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td ><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"}, class: "destroy_#{book.id}" %></td>
    </tr>
    <% end %>
  </table>

  <h2>New book</h2>
  <p class="form">
    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title, class: "book_title" %>
      <h4>Body</h4>
      <%= f.text_area :body, class: "book_body" %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>
  </p>

</div>